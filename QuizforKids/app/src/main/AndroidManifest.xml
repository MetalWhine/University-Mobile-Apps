<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizForKids"
        tools:targetApi="31">
        <activity
            android:name=".ChangePasswordActivity"
            android:parentActivityName=".MainMenuActivity"
            android:label="Change Password"
            android:exported="false" />
        <activity
            android:name=".ScoreboardActivity"
            android:parentActivityName=".MainMenuActivity"
            android:label="Scoreboard"
            android:exported="false" />
        <activity
            android:name=".MainMenuActivity"
            android:label="Main Menu"
            android:exported="false" />
        <activity
            android:name=".InstructionsActivity"
            android:parentActivityName=".MainMenuActivity"
            android:label="Instructions"
            android:exported="false" />
        <activity
            android:name=".CartoonsQuizActivity"
            android:parentActivityName=".MainMenuActivity"
            android:label="Cartoons Quiz"
            android:exported="false" />
        <activity
            android:name=".AnimalsQuizActivity"
            android:parentActivityName=".MainMenuActivity"
            android:label="Animals Quiz"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MainActivity"
            android:label="Register Account"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity"
            android:label="Login Account"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:label="Quiz for kids"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>